.products-name {
    &__table-name {
        margin-bottom: 24px;
        margin-top: 96px;

        width: 113px;
        height: 40px;
        font-size: 31px;
        font-weight: bold;
        font-stretch: normal;
        font-style: normal;
        line-height: 1.29;
        letter-spacing: -0.5px;
        color: #27282c;
    }

    &__table {
        display: grid;
        grid-template-columns: 72px 72px 72px;
        column-gap: 93px;
        row-gap: 48px;

        @media (--md) {
            justify-content: center;
        }
    }

    &__ide {
        width: 72px;

        @media (--sm) {
            width: 48px;
        }
    }

    &__image {
        transition: opacity;
        transition-duration: 0.5s;
    }

    &__image_blur {
        opacity: 20%;
    }

    &__info-table-name {
        margin-bottom: 45px;
        margin-top: 96px;

        font-size: 18px;
        font-weight: normal;
        font-stretch: normal;
        font-style: normal;
        line-height: 1.56;
        letter-spacing: normal;
        color: rgba(39, 40, 44, 0.7);
    }

    &__info-table {
        display: grid;
        grid-template-columns: auto auto;
        column-gap: 33px;
        row-gap: 30px;
    }

    &__ide-card-image_mobile {
        width: 48px;
        height: 48px;

        margin-bottom: 12px;
    }

    &__ide-card-name_mobile {
        height: 24px;

        font-size: 15px;
        font-weight: bold;
        font-stretch: normal;
        font-style: normal;
        line-height: 1.6;
        letter-spacing: normal;
        color: #27282c;

        margin-bottom: 8px;
    }

    &__ide-name {
        cursor: pointer;
        font-size: 20px;
        font-weight: bold;
        font-stretch: normal;
        font-style: normal;
        line-height: 1.4;
        letter-spacing: normal;
        color: #27282c;
        transition: color;
        transition-duration: 0.15s;

        margin-bottom: 6px;

        &:hover {
            color: #f76707;
        }
    }

    &__competencies {
        display: flex;

        > * {
            padding-left: 20px;
            padding-right: 20px;
            height: 24px;
            object-fit: contain;
            border-radius: 4px;
            background-color: rgba(39, 40, 44, 0.05);
            display: flex;
            align-items: center;

            > * {
                font-size: 12px;
                font-weight: normal;
                font-stretch: normal;
                font-style: normal;
                line-height: 1.33;
                letter-spacing: normal;
                text-align: center;
                color: rgba(39, 40, 44, 0.7);
            }

            &:not(:last-child) {
                margin-right: 10px;
            }
        }

        &_mobile {
            > * {
                padding-left: 15px;
                padding-right: 15px;
            }
        }
    }

    &__image {
        width: 100%;
        height: 100%;
    }

    @media (--sm) {
        display: grid;
        grid-template-columns: auto auto;
        grid-row-gap: 22px;
    }
}

.products-name-section {
    padding-bottom: 24px;

    &_mobile {
        width: 329px;
    }

    &__info-table-name_mobile {
        margin-top: 64px;
        margin-bottom: 32px;
        font-size: 18px;
        font-weight: normal;
        font-stretch: normal;
        font-style: normal;
        line-height: 1.56;
        letter-spacing: normal;
        color: rgba(39, 40, 44, 0.7);
    }

    &__table-name_mobile {
        margin-bottom: 16px;
        font-size: 24px;
        font-weight: bold;
        font-stretch: normal;
        font-style: normal;
        line-height: 1.33;
        letter-spacing: -0.39px;
        color: #27282c;
    }
}
